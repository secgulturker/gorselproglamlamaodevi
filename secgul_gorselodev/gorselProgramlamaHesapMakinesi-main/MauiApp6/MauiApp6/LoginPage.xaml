<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp6"
             x:Class="MauiApp6.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout Spacing="10" VerticalOptions="Center">

        <Label
            HorizontalOptions="Center"
            Text="Welcome to Login Page"
            VerticalOptions="Center" />

        <Entry Placeholder="UserName" WidthRequest="200" />
        <Entry Placeholder="Password" WidthRequest="200" />


        <Button Clicked="Button_Clicked" Style="{StaticResource OkButtonStyle}" />

        <Button
            Background="Transparent"
            Clicked="Kaydolma_Clicked"
            Text="Hesabınız yoksa kaydolmak için buraya tıklayın."
            TextColor="Blue" />

    </VerticalStackLayout>
</ContentPage>